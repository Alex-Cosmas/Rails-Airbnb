<%= form_with url: api_users_by_email_path do |f| %>

    <div>
      <div class="">

        <div class="text-gray-900">
          <div class="absolute cursor-pointer" data-modal-target="closeButton">
            <svg fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" class="h-6 w-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </div>
          <h3 class="text-md font-medium leading-6 text-gray-900 mb-4 text-center" id="modal-title">
            Sign In or Sign Up
          </h3>

        </div>

        <div class="relative">
          <div class="absolute inset-0 flex items-center" aria-hidden="true">
            <div class="w-full border-t border-gray-300"></div>
          </div>

          <div class="clear">
          </div>

        </div>
        <div class="pt-2">
          <h4 class="text-xl leading-6 text-gray-900 my-2 font-medium">Welcome to Airbnb</h4>

          <div class="rounded-md px-3 pb-1.5 pt-2.5 shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-indigo-600">

            <%= f.label :email, class: "block m:text-xs font-medium text-gray-900" %>
            <%= f.email_field :email, placeholder: "joe.smith@gmail.com", class: "block w-full border-0 p-0 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-xs sm:leading-6" %>
<!--            <label for="name" class="block m:text-xs font-medium text-gray-900">Email</label>-->
<!--            <input type="text" name="name" id="name" class="block w-full border-0 p-0 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-xs sm:leading-6" placeholder="joe.smith@gmail.com">-->
          </div>

        </div>
      </div>
    </div>
    <div class="mt-5 sm:mt-6">
      <%= f.submit "Continue", class: "inline-flex w-full justify-center rounded-md airbnb-pink-gradient text-sm font-semibold text-white shadow-sm focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 px-6 py-3" %>
<!--      <button type="button" class="inline-flex w-full justify-center rounded-md airbnb-pink-gradient text-sm font-semibold text-white shadow-sm focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 px-6 py-3">Continue</button>-->
    </div>
<% end %>

<div class="relative">
  <div class="absolute inset-0 flex items-center" aria-hidden="true">
    <div class="w-full border-t border-gray-300"></div>
  </div>
  <div class="relative flex justify-center">
    <span class="bg-white px-2 text-sm text-gray-500">or</span>
  </div>
</div>

<div class="mt-5 sm:mt-6">
  <button type="button" class="inline-flex w-full justify-center rounded-md text-sm font-semibold text-gray-700 shadow-sm hover:bg-gray-50 focus-visible:outline focus-visible:outline-2 border border-gray-300 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 px-6 py-3">Continue
    with Facebook
  </button>
</div>

</div>