<div data-controller="users-by-email-auth">
  <div class="text-gray-900">
    <div class="absolute cursor-pointer" data-modal-target="closeButton">
      <svg fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" class="h-6 w-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </div>
    <h3 class="text-md font-medium leading-6 text-gray-900 mb-4 text-center" id="modal-title">
      Sign In or Sign Up
    </h3>

  </div>

  <div class="relative">
    <div class="absolute inset-0 flex items-center" aria-hidden="true">
      <div class="w-full border-t border-gray-300"></div>
    </div>

    <div class="clear">
    </div>

  </div>
  <div class="pt-2">
    <h4 class="text-xl leading-6 text-gray-900 my-2 font-medium">Welcome to Airbnb</h4>

    <div
      data-users-by-email-auth-target="emailWrapper"
      class="relative rounded-md px-3 pb-1.5 pt-2.5 shadow-sm ring-1 ring-inset invalid-inset-input-text-field">
      <label for="email" class="block m:text-xs font-medium">Email</label>
      <input data-users-by-email-auth-target="email" type="text" name="email" id="email" class="block w-full border-0 p-0 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-xs sm:leading-6" placeholder="joe.smith@gmail.com">

      <div data-users-by-email-auth-target="invalidSvg" class="hidden pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
        <svg class="h-5 w-5 text-red-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-5a.75.75 0 01.75.75v4.5a.75.75 0 01-1.5 0v-4.5A.75.75 0 0110 5zm0 10a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"/>
        </svg>
      </div>
     
    </div>

    <p data-users-by-email-auth-target="errorMessage" class="hidden mt-2 text-sm text-red-600" id="email-error">Your password must be not less than 4 characters long</p>



  </div>
</div>

<div class="mt-5 sm:mt-6">
  <button data-users-by-email-auth-target="submit" type="button" class="inline-flex w-full justify-center rounded-md airbnb-pink-gradient text-sm text-white shadow-sm focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 px-6 py-3">Continue</button>
</div>


<div>
  <div class="relative">
    <div class="absolute inset-0 flex items-center" aria-hidden="true">
      <div class="w-full border-t border-gray-300"></div>
    </div>
    <div class="relative flex justify-center">
      <span class="bg-white px-2 text-sm text-gray-500">or</span>
    </div>
  </div>

  <div class="mt-5 sm:mt-6">
    <button type="button" class="inline-flex w-full justify-center rounded-md text-sm font-semibold text-gray-700 shadow-sm hover:bg-gray-50 focus-visible:outline focus-visible:outline-2 border border-gray-300 focus-visible:outline-offset-2 focus-visible:outline-red-900 px-6 py-3">Continue
      with Facebook
    </button>
  </div>

</div>



